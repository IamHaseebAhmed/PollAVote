<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adashboard"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B9121"
        android:fontFamily="@font/fredoka_one"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/dashboard"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#BAECECEC"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <Button
                    android:id="@+id/cpButton"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="CREATE POLLS"
                    android:fontFamily="@font/fredoka_one"
                    android:paddingTop="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="3"
                    android:background="@drawable/menucolor"
                    android:textColor="#FFF"
                    android:drawableTop="@drawable/ic_cpoll">
                </Button>

                <Button
                    android:id="@+id/epButton"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="EDIT POLLS"
                    android:fontFamily="@font/fredoka_one"
                    android:layout_weight="3"
                    android:paddingTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:drawableTop="@drawable/ic_epoll"
                    android:background="@drawable/menucolor"
                    android:textColor="#FFF">
                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <Button
                    android:id="@+id/lvButton"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="LIST OF VOTERS"
                    android:fontFamily="@font/fredoka_one"
                    android:paddingTop="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="3"
                    android:drawableTop="@drawable/ic_listvoters"
                    android:background="@drawable/menucolor"
                    android:textColor="#FFF">
                </Button>

                <Button
                    android:id="@+id/rpButton"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="POLLING REPORTS"
                    android:fontFamily="@font/fredoka_one"
                    android:layout_weight="3"
                    android:paddingTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:drawableTop="@drawable/ic_rpoll"
                    android:background="@drawable/menucolor"
                    android:textColor="#FFF">
                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/aSignOutButton"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="SIGN OUT"
                    android:fontFamily="@font/fredoka_one"
                    android:paddingTop="20dp"
                    android:layout_weight="3"
                    android:drawableTop="@drawable/ic_signout"
                    android:background="@drawable/menucolor"
                    android:textColor="#FFF">
                </Button>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>